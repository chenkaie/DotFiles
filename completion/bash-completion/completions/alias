# bash alias completion                                    -*- shell-script -*-

_alias()
{
    local cur prev words cword
    _init_completion || return

    case ${words[@]} in
        *[^=])
            COMPREPLY=( $( compgen -A alias -- "$cur" ) )
            ;;
        *=)
            COMPREPLY=( "$( alias ${cur%=} 2>/dev/null | sed \
                -e 's|^alias '"$cur"'\(.*\)$|\1|' )" )
            ;;
    esac
} &&
complete -F _alias -o nospace alias

