_smbpasswd()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -r)
            _samba_hosts
            return 0
            ;;
        -R)
            _samba_resolve_order
            return 0
            ;;
        -c)
            _filedir
            return 0
            ;;
        -D)
            _samba_debuglevel
            return 0
            ;;
        -U|-h|-w)
            return 0
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '$( _parse_help "$1" -h )' -- "$cur" ) )
    fi
} &&
complete -F _smbpasswd smbpasswd

_smbtar()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -r|-t)
            _filedir tar
            return 0
            ;;
        -s)
            _samba_hosts
            return 0
            ;;
        -l)
            _samba_debuglevel
            return 0
            ;;
        -N)
            _filedir
            return 0
            ;;
        -p|-x|-b|-d|-u)
            return 0
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '$( _parse_help "$1" )' -- "$cur" ) )
    fi
} &&
complete -F _smbtar smbtar

