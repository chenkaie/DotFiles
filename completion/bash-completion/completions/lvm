_vgreduce()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -A|--autobackup)
            COMPREPLY=( $( compgen -W 'y n' -- "$cur" ) )
            return 0
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '$( _parse_usage "$1" --help )' -- "$cur" ) )

    else
        local args
        _lvm_count_args '@(-A|--autobackup)'
        if [[ $args -eq 0 ]]; then
            _lvm_volumegroups
        else
            _lvm_physicalvolumes
        fi
    fi
} &&
complete -F _vgreduce vgreduce

