#!/bin/sh

if [ -z "${PRODUCTDIR}" ]; then
    echo "Please source environment file first!"
    exit 1
fi
./remove_unused_files
fakeroot ./build_xxx

cd ${PRODUCTDIR}/release
mkdir -p log
eval "ls -lR rootfs/* | sed 's/`date +%b`........./ /' > log/rootfs_`date +%F_%H%M%S`.lst"
eval "ls -lR flashfs/* | sed 's/`date +%b`........./ /' > log/flashfs_`date +%F_%H%M%S`.lst"
