#!/bin/sh

export LSPDIR=/opt/Vivotek/lsp
export BUILDROOTDIR=${LSPDIR}/buildroot-2.0.0.0
export PROJECT=vivaldi-2.0.0.0_8M64M_UART
export VIVALDIDIR=${LSPDIR}/${PROJECT}

. ${VIVALDIDIR}/scripts/archive/devel_vivaldi

# Product definition
# ** this should be re-assigned to a product directory **
export PRODUCTNAME=warden
export PRODUCTDIR=${PWD}/../
export ROOTFS_SRCDIR=${PRODUCTDIR}/rootfs
export FLASHFS_SRCDIR=${PRODUCTDIR}/flashfs
export ROOTFSDIR=${PRODUCTDIR}/release/rootfs
export FLASHFSDIR=${PRODUCTDIR}/release/flashfs
export WEBDIR=${FLASHFSDIR}/www
export ETCDIR=${FLASHFSDIR}/etc
export PRODUCTVER=SD7151-LVLO-0100f
export LANGUAGE=en
export PLUGINVER=2.0.0.91
export IMAGEDIR=${PRODUCTDIR}/release/package/${PRODUCTVER}-${LANGUAGE}

# check product folder
if [ ! -d "${PRODUCTDIR}" ]; then
    echo "The product directory ${PRODUCTDIR} doesn't exist."
    echo "Please modify devel file or create the directory."
fi

# source FTP site 
export FTP_HOST_SITE=ftp://rd2-3

# Hardware definition
export BOARDTYPE=vivaldi
# Warden v0.4
export L1BOOT=L1boot_f8m_r2b64m_c110.bin
export L1LOADER=L1load.bin
export L2BOOT=armboot.bin
export L1ALL=l1boot.bin
export ENVIMG=bootenv.img
export ENVIMG1=bootenv1.img
export ENVIMG2=bootenv2.img
export PARIMG=sysparam.img

# Linux kernel definition
export OSTOOLNAME=linux
export OSVERSION=2.4.26
export OSEXTENSION=vvtk1000

cd ../apps/app_cluster
source proj_env
cd ../../build

# Image sensor definition
#export SENSORTYPE=MT9V111
#export SENSORTYPE=MT9M111
#export SENSORTYPE=SAA7113H
#export SENSORTYPE=MTV54K35
#export SENSORTYPE=VICAM3
export SENSORTYPE=PV480
export SIP_ENABLE=yes
