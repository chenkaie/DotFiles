#!/bin/sh

#export LSPDIR=/opt/Vivotek/lsp
# use the newest integrated lsp
export LSPDIR=/opt/Vivotek/lsp/vivaldi
export BUILDROOTDIR=${LSPDIR}/buildroot-2.0.0.0
#export PROJECT=vivaldi-2.0.0.0_8M32M_sq
